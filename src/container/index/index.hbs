{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form__title">Make user</h1>
      <form method="POST" action="/user-create">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class='form__label'> Email adress:</label>
            <input type="text" name='email' class="form__input">
          </div>
          <div class="form__field">
            <label for="login" class='form__label'> Login:</label>
            <input type="login" name='login' class="form__input">
          </div>
          <div class="form__field">
            <label for="password" class='form__label'> Password:</label>
            <input type="password" name='password' class="form__input">
          </div>
          <button class="form__button">Submit</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">List with users</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>ლ(ಠ_ಠ ლ)___ non users </mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{login}} | {{email}} | {{id}} <a href="/user-delete?id={{id}}">(delete user)</a></li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}

      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Change mail</h1>
      <form method="POST" action="/user-update">
        <div class="form__content">

          <div class="form__field">
            <label for="id" class='form__label'> ID:</label>
            <input type="id" name='id' class="form__input">
          </div>

          <div class="form__field">
            <label for="email" class='form__label'>New Email adress:</label>
            <input type="text" name='email' class="form__input">
          </div>

          <div class="form__field">
            <label for="password" class='form__label'> Password:</label>
            <input type="password" name='password' class="form__input">
          </div>
          <button class="form__button">Send</button>
        </div>
      </form>
    </div>
  </section>
</main>





